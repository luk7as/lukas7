function validarValor(){
const texto = prompt("escreve seu numero");
if (isNaN(texto)== true ){
console.log("não é um numero")
}
else{
    const numero = Number(texto);
if((numero >= 1) && (numero<=10)){
confirm.log("valor valido");
}
else{
    console.log("valor invalido");
}
}
}

